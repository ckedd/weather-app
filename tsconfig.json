{
  "compilerOptions": {
    "jsx": "react",
    "rootDir": "./",
    "outDir": "./dist",
    "allowJs": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
